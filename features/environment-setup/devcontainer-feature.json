{
    "name": "Environment setup",
    "id": "environment-setup",
    "version": "0.0.2",
    "description": "Setup the local developer environment after software has been installed.",
    "options": {
        "csharp" : {
            "type": "boolean",
            "default": true,
            "description": "Update dotnet workload and trust the developer certificate"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/dotnet",
        "ghcr.io/devcontainers/features/docker-in-docker:2",
        "ghcr.io/devcontainers/features/terraform:1",
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1",
        "ghcr.io/devcontainers/features/hugo:1",
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1",
        "ghcr.io/prom3theu5/aspirational-manifests/aspirate"
    ]
}
