{
    "name": "Language servers",
    "id": "language-servers",
    "version": "0.0.4",
    "description": "Install language servers to support editors.",
    "options": {
        "yaml" : {
            "type": "boolean",
            "default": true,
            "description": "Install redhat yaml server"
        },
        "bash" : {
            "type": "boolean",
            "default": true,
            "description": "Install bash language server"
        },
        "docker" : {
            "type": "boolean",
            "default": true,
            "description": "Install docker language server"
        },
        "docker_compose" : {
            "type": "boolean",
            "default": true,
            "description": "Install docker compose language server"
        },
        "marksman" : {
            "type": "boolean",
            "default": true,
            "description": "Install marksman language server for the markdown language"
        },
        "markdown_oxide" : {
            "type": "boolean",
            "default": true,
            "description": "Install markdown oxide language server for the markdown language"
        },

        "markdown_oxide" : {
            "type": "boolean",
            "default": true,
            "description": "Install markdown oxide language server for the markdown language"
        },
        "html" : {
            "type": "boolean",
            "default": true,
            "description": "Install html language server"
        },
        "css" : {
            "type": "boolean",
            "default": true,
            "description": "Install css language server"
        },
        "typescript" : {
            "type": "boolean",
            "default": true,
            "description": "Install typescript / javascript language server"
        },
        "vue" : {
            "type": "boolean",
            "default": false,
            "description": "Install vue language server"
        },
        "terraform" : {
            "type": "boolean",
            "default": true,
            "description": "Install terraform-ls"
        },
        "omnisharp" : {
            "type": "boolean",
            "default": false,
            "description": "Install omnisharp language server"
        },
        "rust": {
            "type": "boolean",
            "default": false,
            "description": "Install rust analyzer (requires rustup)"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/dotnet",
        "ghcr.io/devcontainers/features/node:1",
        "ghcr.io/prom3theu5/aspirational-manifests/aspirate"
    ]
}
