{
    "name": "cmdline tools",
    "id": "cmdline-tools",
    "version": "0.0.1",
    "description": "Download the latest cmdline and tui tools.",
    "options": {
        "dotnet_outdated" : {
            "type": "boolean",
            "default": true,
            "description": "Install dotnet outdated"
        },
        "dotnet_ef" : {
            "type": "boolean",
            "default": true,
            "description": "Install dotnet entity framework command line utilities"
        },
        "dotnet_sqlpackage" : {
            "type": "boolean",
            "default": true,
            "description": "Install dotnet sqlpackage"
        },
        "just" : {
            "type": "boolean",
            "default": true,
            "description": "Install just - handy way to save and run project-specific commands - https://github.com/casey/just"
        },
        "difftastic" : {
            "type": "boolean",
            "default": true,
            "description": "Install difftastic and setup as default git diff tool"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/dotnet",
        "ghcr.io/prom3theu5/aspirational-manifests/aspirate"
    ]
}
